{
  "watch": [
    "src/**/*",
    "config/**/*"
  ],
  "ext": ".ts,.js,.json,.env",
  "ignore": [
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/test/*",
    "src/**/*.d.ts",
    "src/**/*.map",
    "src/coverage/*",
    "src/**/__mocks__/*",
    "src/**/__tests__/*"
  ],
  "exec": "ts-node -r tsconfig-paths/register --files ./src/index.ts",
  "env": {
    "NODE_ENV": "development",
    "TS_NODE_PROJECT": "./tsconfig.json",
    "TS_NODE_TRANSPILE_ONLY": "true",
    "TS_NODE_FILES": "true"
  },
  "verbose": true,
  "restartable": "rs",
  "colours": true,
  "delay": 1000,
  "legacyWatch": false,
  "signal": "SIGTERM",
  "stdout": true,
  "stdin": false
}