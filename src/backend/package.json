{
  "name": "TaskStream AI Backend",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "tsc --project tsconfig.json",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --coverageThreshold='{\"global\":{\"branches\":80,\"functions\":80,\"lines\":80,\"statements\":80}}'",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "clean": "rimraf dist coverage",
    "prepare": "husky install",
    "security:audit": "npm audit --audit-level=high",
    "typecheck": "tsc --noEmit",
    "validate": "npm-run-all --parallel test lint typecheck"
  },
  "dependencies": {
    "express": "^4.18.2",
    "typescript": "^5.0.0",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "winston": "^3.11.0",
    "passport": "^0.6.0",
    "express-rate-limit": "^7.1.4",
    "compression": "^1.7.4",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.0",
    "bcrypt": "^5.1.0",
    "morgan": "^1.10.0",
    "axios": "^1.6.0",
    "typeorm": "^0.3.17",
    "retry": "^0.13.1",
    "typeorm-typedi-extensions": "^0.4.1",
    "typedi": "^0.10.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/passport": "^10.0.0",
    "@taskstream/auth": "1.0.0",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "joi": "^17.9.2",
    "validator": "^13.9.0",
    "date-fns": "^2.30.0",
    "pg": "^8.11.0",
    "mongoose": "^7.0.0",
    "redis": "^4.6.0",
    "@elastic/elasticsearch": "^8.10.0",
    "kafkajs": "^2.2.4",
    "ioredis": "^5.3.2",
    "winston-daily-rotate-file": "^4.7.1",
    "winston-elasticsearch": "^0.17.4",
    "otplib": "^12.0.1",
    "express-correlation-id": "^2.0.0",
    "express-circuit-breaker": "^2.0.0",
    "express-monitor": "^1.0.0",
    "@company/monitoring": "1.0.0",
    "opentelemetry-api": "^1.20.0",
    "date-fns-tz": "^2.0.0",
    "class-validator": "^0.14.0",
    "@nestjs/throttler": "^5.0.0",
    "@nestjs/circuit-breaker": "^1.0.0",
    "@nestjs/swagger": "^7.0.0",
    "@nestjs/analytics": "^1.0.0",
    "@nestjs/event-emitter": "^1.0.0",
    "@taskstream/security-context": "1.0.0",
    "@taskstream/monitoring": "1.0.0",
    "rate-limiter-flexible": "^2.4.1",
    "opossum": "^6.4.0",
    "uuid": "^9.0.0",
    "openapi-types": "^12.1.0",
    "js-yaml": "^4.1.0",
    "prom-client": "^14.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.9.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "eslint": "^8.53.0",
    "prettier": "^3.1.0",
    "jest": "^29.7.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "ts-jest": "^29.1.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "tsconfig-paths": "^4.2.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.0"
  }
}