{
  "name": "TaskStream AI Test Suite",
  "version": "2.0.0",
  "private": true,
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "test:ai": "jest --config=jest.ai.config.js",
    "test:nlp": "jest --config=jest.nlp.config.js",
    "test:ml": "jest --config=jest.ml.config.js",
    "test:integration": "jest --selectProjects integration",
    "test:e2e": "playwright test",
    "test:performance": "k6 run performance/",
    "test:security": "snyk test && zap-cli quick-scan",
    "test:coverage": "jest --coverage --coverageThreshold='{\"global\":{\"branches\":80,\"functions\":80,\"lines\":80}}'",
    "test:monitor": "datadog-ci jest --coverage",
    "test:load": "artillery run load-tests/",
    "security:audit": "npm audit && snyk test && trivy fs .",
    "security:scan": "zap-cli quick-scan --self-contained",
    "lint": "eslint . --ext .ts,.tsx --max-warnings 0",
    "format": "prettier --write \"**/*.{ts,tsx,json}\"",
    "clean": "rimraf coverage .test-results"
  },
  "dependencies": {
    "@artilleryio/artillery-plugin-expect": "2.x",
    "@artilleryio/artillery-plugin-metrics-by-endpoint": "2.x",
    "@axe-core/react": "^4.7.3",
    "@company/test-metrics": "^1.0.0",
    "@cypress/code-coverage": "^3.10.0",
    "@jest/benchmark": "^29.0.0",
    "@jest/globals": "^29.0.0",
    "@microsoft/nlp.js": "^4.27.0",
    "@playwright/browser-chromium": "^1.35.0",
    "@playwright/test": "^1.37.0",
    "@reduxjs/toolkit": "^1.9.5",
    "@tensorflow/tfjs-node": "^4.12.0",
    "artillery": "^2.0.0",
    "artillery-plugin-publish-metrics": "2.x",
    "autocannon": "^7.11.0",
    "axios": "^1.4.0",
    "axios-mock-adapter": "^1.22.0",
    "benchmark": "^2.1.4",
    "cypress": "13.x",
    "cypress-audit": "^1.1.0",
    "datadog-ci": "^2.3.0",
    "dockerode": "^3.3.5",
    "dotenv": "^16.0.0",
    "express": "^4.18.2",
    "jest": "29.x",
    "jest-axe": "^7.0.0",
    "jest-extended": "^4.0.0",
    "jest-performance": "^1.0.0",
    "jwt-decode": "^3.1.2",
    "jsonwebtoken": "^9.0.0",
    "k6": "0.45.x",
    "metrics-collector": "^1.0.0",
    "moment": "2.x",
    "msw": "^1.3.0",
    "nock": "^13.3.0",
    "performance-now": "^2.1.0",
    "pino": "^8.15.0",
    "react": "^18.0.0",
    "react-redux": "^8.0.0",
    "redux-mock-store": "^1.5.4",
    "redux-thunk": "^2.4.2",
    "redis-mock": "^0.56.3",
    "smtp-tester": "^2.0.0",
    "snyk": "latest",
    "test-metrics": "^2.0.0",
    "testcontainers": "^9.0.0",
    "winston": "^3.8.0"
  },
  "devDependencies": {
    "@types/ai-metadata": "^1.0.0",
    "@types/analytics": "^1.0.0",
    "@types/benchmark": "2.1.5",
    "@types/cypress": "^1.1.3",
    "@types/jest": "^29.0.0",
    "@types/pagination": "^1.0.0",
    "@types/task": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "dependency-check": "^7.0.0",
    "eslint": "^8.53.0",
    "jest-html-reporter": "^3.10.1",
    "jest-junit": "^15.0.0",
    "jest-sonar-reporter": "^2.0.0",
    "prettier": "^3.1.0",
    "typescript": "^5.0.0"
  }
}